<div class="container mx-auto pt-10 px-4">
  <!-- 検索フォーム -->
  <div class="max-w-4xl mx-auto mb-8">
  <form class="flex gap-2">
  <input type="search" placeholder="検索ワード" class="input input-bordered w-full" />
  <button type="submit" class="btn btn-primary">検索</button>
</form>
  </div>
  <h1 class="text-1xl">これやる！リスト</h1>
  <!-- ブックマーク一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if @bookmark_posts.present? %>
        <%= render @bookmark_posts %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center">これやる！リストに追加した投稿はありません</p>
    <% end %>
  </div>
</div>
