<div class="col-span-1 lg:col-span-1 mb-6">
  <div id="post-id-<%= post.id %>" class="card shadow-md">
    <!-- <figure>
      <%= image_tag post.image_url || "300200.png", class: "w-full h-48 object-cover" %>
    </figure> -->
    <div class="card-body p-4">
      <div class="flex justify-between items-center mb-2">
        <h2 class="card-title text-lg font-bold">
          <%= link_to post.title, post_path(post), class: "text-blue-600 hover:underline" %>
        </h2>

      </div>

      <ul class="list-none space-y-1 text-gray-600">
        <li>
          <span class="font-medium">ユーザー名:</span> <%= "#{post.user.name}" %>
        </li>
        <li>
          <span class="font-medium">投稿日:</span> <%= l(post.created_at, format: :short) %>
        </li>
      </ul>
    </div>
  </div>
</div>
