<%= search_form_for q, url: url, class: "w-full max-w-5xl mx-auto" do |f| %>
    <div class="flex flex-wrap items-center space-x-2">
      <!-- 検索ワード入力欄 -->
      <%= f.search_field :title_or_content_cont,
        class: "input input-bordered w-64", placeholder: "検索ワード" %>

      <!-- 所要時間 -->
      <%= f.select :required_time_eq,
        options_for_select(Post.required_times.map { |k, v| [Post.human_enum_name(:required_time, k), v] },
        selected: params.dig(:q, :required_time_eq)),
        { include_blank: "すべての時間" },
        class: "select select-bordered w-40" %>

      <!-- 所要金額 -->
      <%= f.select :required_cost_eq,
        options_for_select(Post.required_costs.map { |k, v| [Post.human_enum_name(:required_cost, k), v] },
        selected: params.dig(:q, :required_cost_eq)),
        { include_blank: "すべての金額" },
        class: "select select-bordered w-40" %>

      <!-- 部位 -->
      <%= f.select :parts_eq,
        options_for_select(Post.parts.map { |k, v| [Post.human_enum_name(:parts, k), v] },
        selected: params.dig(:q, :parts_eq)),
        { include_blank: "すべての部位" },
        class: "select select-bordered w-40" %>

      <!-- 検索ボタン -->
      <%= f.submit "検索", class: "btn btn-primary ml-2" %>
    </div>
  <% end %>
