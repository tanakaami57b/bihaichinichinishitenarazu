<div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">コメント編集</h1>

  <%= form_with model: @comment, url: comment_path(@comment), method: :patch, local: true, class: "space-y-6" do |f| %>

    <!-- コメント入力欄 -->
    <div>
      <%= f.label :content, "コメント内容", class: "block text-lg font-medium text-gray-700" %>
      <%= f.text_area :content,
        class: "textarea textarea-bordered w-full h-32 mt-2 placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none",
        placeholder: "ここにコメントを入力してください..."
      %>
    </div>

    <!-- アクションボタン -->
    <div class="flex justify-end gap-4">
      <%= link_to "キャンセル", post_path(@comment.post),
        class: "btn btn-outline btn-error" %>

      <%= f.submit "コメントを更新",
        class: "btn btn-outline btn-primary" %>
    </div>

  <% end %>
</div>
