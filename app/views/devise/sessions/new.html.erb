<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

      <!-- 名前フィールド -->
      <div class="form-control">
        <%= f.label :name, "お名前", class: "label font-medium" %>
        <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full" %>
      </div>

      <!-- メールアドレスフィールド -->
      <div class="form-control">
        <%= f.label :email, "メールアドレス", class: "label font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <!-- パスワードフィールド -->
      <div class="form-control">
        <%= f.label :password, "パスワード", class: "label font-medium" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
      </div>

      <!-- Remember me チェックボックス -->
      <% if devise_mapping.rememberable? %>
        <div class="form-control flex items-center space-x-2">
          <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "label cursor-pointer" %>
        </div>
      <% end %>

      <!-- ログインボタン -->
      <div class="form-control">
        <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
      </div>

    <% end %>


