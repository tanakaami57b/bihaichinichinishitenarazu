<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>

      <!-- エラーメッセージ -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- 名前フィールド -->
      <div class="form-control">
        <%= f.label :name, "お名前", class: "label font-medium" %>
        <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full" %>
      </div>

      <!-- メールフィールド -->
      <div class="form-control">
        <%= f.label :email, "メールアドレス", class: "label font-medium" %>
        <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <!-- パスワードフィールド -->
      <div class="form-control">
        <%= f.label :password, "パスワード", class: "label font-medium" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(最低 <%= @minimum_password_length %> 文字)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <!-- パスワード確認フィールド -->
      <div class="form-control">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "label font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <!-- サインアップボタン -->
      <div class="form-control">
        <%= f.submit "登録", class: "btn btn-primary w-full" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
