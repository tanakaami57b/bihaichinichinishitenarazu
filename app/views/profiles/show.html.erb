<div class="container mx-auto mt-10 px-4 sm:px-6 lg:px-8">
  <!-- カードスタイルでマイページ全体を囲む -->
  <div class="card bg-white shadow-2xl rounded-lg p-8">

    <!-- タイトルと編集ボタンのコンテナ -->
    <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
      <!-- タイトル -->
      <h1 class="text-3xl font-bold text-gray-800" >
        マイページ
      </h1>

      <!-- 編集ボタン -->
      <%= link_to 'マイページ編集', edit_profile_path,
                  class: "btn btn-primary btn-sm sm:btn-md hover:bg-blue-600 transition ease-in-out duration-300",
                  data: { turbo: false } %>
    </div>

    <!-- ユーザーアイコン -->
    <div class="flex justify-center mb-6">
      <div class="avatar">
        <div class="w-32 h-32 sm:w-40 sm:h-40 rounded-full shadow-lg ">
          <img src="<%= asset_path(@user.profile_image_url.presence || 'icon1.png') %>"
               alt="ユーザーアイコン">
        </div>
      </div>
    </div>

    <!-- ユーザー情報カード -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner max-w-2xl mx-auto text-center">
      <h2 class="text-2xl text-gray-700 mb-2">
        名前: <span class="text-gray-900"><%= @user.name %></span>
      </h2>
      <p class="text-gray-600 text-base">
        登録日: <span class="text-gray-700 font-medium"><%= @user.created_at.strftime("%Y年%m月%d日") %></span>
      </p>
    </div>

  </div>
</div>
